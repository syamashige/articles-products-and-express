{{!-- action = "/resource?_method=PUT" --}}
{{#with thisProduct}}
<form action="/products/{{id}}?_method=PUT" method="post" id="editForm">
    <label id="editNameLabel">
        NAME: 
    <br>
    <input type="text" name="name" id="editNameInput" placeholder="{{name}}">
    </label>
    <br>
    <label id="editPriceLabel">
        PRICE:
        <br>
        <input type="text" name="price" id="editPriceInput" placeholder="{{price}}">
    </label>
    <br>
    <label id="editInventoryLabel">
        INVENTORY: 
        <br>
        <input type="text" name="inventory" id="editInventoryInput" placeholder="{{inventory}}">
    </label>
    <br>
    <label id="editDescriptionLabel">
        DESCRIPTION: 
        <br>
        <input type="text" name="description" id="editDescriptionInput" placeholder="{{description}}">
    </label>
    <input type="submit" value="SUBMIT" classname="submitButton"> {{/with}}
</form>

{{#with thisProduct}}
<form action="/product/{{id}}?_method=DELETE" method="post">
    <input type="submit" class="deleteButton" value="DELETE"> {{/with}}

</form>

